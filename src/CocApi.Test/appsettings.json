{
  "ConnectionStrings": {
    "CocApiTest": "POSTGRES_COCAPI_TEST_DEV"
  },

  "CocApi": {
    "Rest": {
      "HttpClient": {
        "BaseAddress": "https://api.clashofclans.com/v1",
        "DurationOfBreak": 30,
        "HandledEventsAllowedBeforeBreaking": 20,
        "MaxConnectionsPerServer": 100,
        "Retries": 2,
        "Timeout": 2000
      },
      "Tokens": [
        "TOKEN_0",
        "TOKEN_1",
        "TOKEN_2",
        "TOKEN_3",
        "TOKEN_4",
        "TOKEN_5",
        "TOKEN_6",
        "TOKEN_7",
        "TOKEN_8",
        "TOKEN_9"
      ]
    },
    // NOTE: there are some advanced settings shown here that are hidden in the editor
    "Cache": {
      "ActiveWars": {
        "Enabled": true,
        "ConcurrentUpdates": 50,
        "DelayBeforeExecution": "00:05:00",
        "DelayBetweenExecutions": "00:10:00"
      },
      "ClanMembers": {
        "Enabled": true,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:00:05"
      },
      "Clans": {
        "Enabled": true,
        "ConcurrentUpdates": 200,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:00:05",
        "DownloadClan": true,
        "DownloadGroup": true,
        "DownloadCurrentWar": true,
        "DownloadWarLog": true
      },
      "CwlWars": {
        "ConcurrentUpdates": 500,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:00:05",
        "Enabled": true
      },
      "DeleteStalePlayers": {
        "Enabled": true,
        "DelayBeforeExecution": "00:20:00",
        "DelayBetweenExecutions": "00:20:00"
      },
      "MaxConcurrentEvents": 25,
      "NewCwlWars": {
        "Enabled": true,
        "ConcurrentUpdates": 10,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:02:00"
      },
      "NewWars": {
        "Enabled": true,
        "ConcurrentUpdates": 50,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:00:15"
      },
      "Players": {
        "ConcurrentUpdates": 50,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:00:05",
        "Enabled": true
      },
      "Wars": {
        "Enabled": true,
        "ConcurrentUpdates": 500,
        "DelayBeforeExecution": "00:00:00",
        "DelayBetweenExecutions": "00:00:05"
      }
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "restrictedToMinimumLevel": "Verbose", // "Information",
          "outputTemplate": "[{Level:u4}] {UtcTimestamp:HH:mm} | {Message:l} <s:{SourceContext}>{NewLine:1}{Exception:1}"
        }
      }
    ]
  }
}
